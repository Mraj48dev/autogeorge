# ================================
# AutoGeorge Environment Variables
# ================================
# Copy this file to .env.local and fill in your values
# Never commit .env.local to version control

# ================================
# Application Configuration
# ================================
NODE_ENV=development
PORT=3000
BASE_URL=http://localhost:3000
LOG_LEVEL=info
CORS_ORIGINS=http://localhost:3000

# ================================
# Database Configuration
# ================================
# PostgreSQL connection string
# Format: postgresql://username:password@host:port/database
DATABASE_URL=postgresql://autogeorge:autogeorge@localhost:5432/autogeorge_dev
DATABASE_LOGGING=false
DATABASE_MAX_CONNECTIONS=10
DATABASE_TIMEOUT=5000

# ================================
# Authentication Configuration
# ================================
# Generate a random secret: openssl rand -base64 32
NEXTAUTH_SECRET=your-nextauth-secret-here-change-in-production
NEXTAUTH_URL=http://localhost:3000

# Google OAuth (optional)
GOOGLE_CLIENT_ID=your-google-client-id
GOOGLE_CLIENT_SECRET=your-google-client-secret

# GitHub OAuth (optional)
GITHUB_CLIENT_ID=your-github-client-id
GITHUB_CLIENT_SECRET=your-github-client-secret

# Session configuration
SESSION_MAX_AGE=2592000

# ================================
# AI Service Configuration
# ================================
# Perplexity API (required)
PERPLEXITY_API_KEY=pplx-your-perplexity-api-key-here

# OpenAI API (optional, for additional AI features)
OPENAI_API_KEY=sk-your-openai-api-key-here

# AI service configuration
AI_DEFAULT_MODEL=llama-3.1-sonar-large-128k-online
AI_MAX_TOKENS=4000
AI_REQUEST_TIMEOUT=60000
AI_RATE_LIMIT=100

# ================================
# API Configuration
# ================================
API_RATE_LIMIT_WINDOW=900000
API_RATE_LIMIT_MAX=100
API_BODY_LIMIT=1mb
ENABLE_SWAGGER=true
API_PREFIX=/api

# ================================
# Security Configuration
# ================================
# Generate secure secrets: openssl rand -base64 32
JWT_SECRET=your-jwt-secret-here-change-in-production
ENCRYPTION_KEY=your-encryption-key-here-change-in-production
HASH_ROUNDS=12
CSRF_SECRET=your-csrf-secret-here
ALLOWED_HOSTS=localhost,127.0.0.1

# ================================
# Monitoring & Observability
# ================================
ENABLE_METRICS=false
METRICS_PORT=9090

# Sentry for error tracking (optional)
SENTRY_DSN=your-sentry-dsn-here

LOG_FLUSH_INTERVAL=5000

# ================================
# Feature Flags
# ================================
ENABLE_QUEUE=true
ENABLE_CACHING=true
ENABLE_RATE_LIMITING=true
ENABLE_ADMIN_PANEL=true
ENABLE_WEBHOOKS=false

# ================================
# External Service Configuration
# ================================
# Redis for caching and queues (optional)
REDIS_URL=redis://localhost:6379

# Email service (optional)
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USER=your-email@gmail.com
SMTP_PASS=your-app-password

# File storage (optional)
AWS_ACCESS_KEY_ID=your-aws-access-key
AWS_SECRET_ACCESS_KEY=your-aws-secret-key
AWS_REGION=us-east-1
AWS_S3_BUCKET=your-s3-bucket-name

# ================================
# Development Tools
# ================================
# Only for development environment
ANALYZE=false
BUNDLE_ANALYZER=false

# ================================
# Production Overrides
# ================================
# These should be set in production environment
# DATABASE_URL=postgresql://user:pass@prod-host:5432/autogeorge_prod
# BASE_URL=https://your-domain.com
# NODE_ENV=production
# LOG_LEVEL=warn
# CORS_ORIGINS=https://your-domain.com