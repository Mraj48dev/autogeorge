{
  "name": "autogeorge",
  "version": "1.0.1",
  "description": "Automated article generation and publishing platform with Clean Architecture",
  "private": true,
  "scripts": {
    "dev": "next dev --turbo",
    "build": "prisma generate && next build",
    "build:prod": "npm run build && prisma db push",
    "build:vercel": "prisma generate && next build",
    "start": "next start",
    "vercel-build": "prisma generate && prisma db push --accept-data-loss && next build",
    "lint": "next lint",
    "lint:fix": "next lint --fix",
    "type-check": "tsc --noEmit",
    "test": "vitest run",
    "test:watch": "vitest",
    "test:coverage": "vitest run --coverage",
    "test:e2e": "playwright test",
    "db:generate": "prisma generate",
    "db:push": "prisma db push",
    "db:migrate": "prisma migrate dev",
    "db:studio": "prisma studio",
    "db:reset": "prisma migrate reset",
    "db:seed": "tsx scripts/seed.ts",
    "admin:health": "tsx src/composition-root/main.ts health",
    "admin:generate-article": "tsx src/composition-root/main.ts generate-article",
    "admin:list-use-cases": "tsx src/composition-root/main.ts list-use-cases",
    "docker:up": "docker-compose up -d",
    "docker:down": "docker-compose down",
    "docker:logs": "docker-compose logs -f",
    "format": "prettier --write .",
    "format:check": "prettier --check .",
    "prepare": "husky install || true"
  },
  "dependencies": {
    "@prisma/client": "^5.8.0",
    "@radix-ui/react-dropdown-menu": "^2.0.6",
    "@radix-ui/react-label": "^2.0.2",
    "@radix-ui/react-select": "^2.0.0",
    "@radix-ui/react-slot": "^1.0.2",
    "@radix-ui/react-toast": "^1.1.5",
    "autoprefixer": "^10.4.16",
    "class-variance-authority": "^0.7.0",
    "clsx": "^2.1.0",
    "lucide-react": "^0.309.0",
    "next": "15.0.3",
    "next-auth": "^5.0.0-beta.4",
    "postcss": "^8.4.32",
    "react": "^18.2.0",
    "react-dom": "^18.2.0",
    "tailwind-merge": "^2.2.0",
    "tailwindcss": "^3.4.0",
    "tailwindcss-animate": "^1.0.7",
    "typescript": "^5.9.2",
    "@types/node": "^20.10.6",
    "zod": "^3.22.4"
  },
  "devDependencies": {
    "@types/react": "^18.2.46",
    "@types/react-dom": "^18.2.18",
    "@typescript-eslint/eslint-plugin": "^6.17.0",
    "@typescript-eslint/parser": "^6.17.0",
    "@vitejs/plugin-react": "^4.2.1",
    "eslint": "^8.56.0",
    "eslint-config-next": "15.0.3",
    "husky": "^8.0.3",
    "lint-staged": "^15.2.0",
    "prettier": "^3.1.1",
    "prisma": "^5.8.0",
    "tsx": "^4.7.0",
    "vitest": "^1.1.3",
    "@playwright/test": "^1.40.1",
    "@testing-library/react": "^14.1.2",
    "@testing-library/jest-dom": "^6.2.0",
    "@vitest/coverage-v8": "^1.1.3"
  },
  "lint-staged": {
    "*.{js,jsx,ts,tsx}": [
      "eslint --fix",
      "prettier --write"
    ],
    "*.{json,md,yml,yaml}": [
      "prettier --write"
    ]
  },
  "engines": {
    "node": ">=18.0.0",
    "npm": ">=9.0.0"
  },
  "keywords": [
    "content-generation",
    "ai",
    "automation",
    "clean-architecture",
    "nextjs",
    "typescript",
    "prisma",
    "perplexity"
  ],
  "author": {
    "name": "AutoGeorge Team",
    "email": "team@autogeorge.dev"
  },
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/your-org/autogeorge.git"
  },
  "bugs": {
    "url": "https://github.com/your-org/autogeorge/issues"
  },
  "homepage": "https://autogeorge.dev"
}